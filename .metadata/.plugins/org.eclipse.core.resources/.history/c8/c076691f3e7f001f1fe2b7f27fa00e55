package pageObject;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class Cart extends BasePage {

	// contractor
	public Cart(WebDriver driver) {
		super(driver);
	}

	// locator

	// *[@id='tbodyid']//tr[1]/td[3]

	@FindBy(xpath = "	//*[@id='tbodyid']//tr[1]/td[3]")
	WebElement price;

	// action method

	// *[@id='tbodyid']//tr
	public int totalRowsCount() {
		List<WebElement> rows = driver.findElements(By.xpath("//*[@id='tbodyid']//tr"));
		int totalRows = rows.size();

		return totalRows;
	}

	public int calculate_Total_Amount() {
		int row = totalRowsCount();
		for (int r = 1; r <= row; r++) {

			String text = driver.findElement(By.xpath("//*[@id='tbodyid']//tr[" + r + "]/td[3]")).getText();
			int price = Integer.parseInt(text);
			int totalAmount = +price;
			System.out.println(totalAmount);

			return totalAmount;

		}
	}
}